<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:cardBackgroundColor="#E8FFFE"
    app:cardCornerRadius="20dp"
    tools:context=".single_course"
    android:id="@+id/c1"
    app:cardElevation="5dp"
    android:layout_margin="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            tools:layout_editor_absoluteX="-79dp"
            tools:layout_editor_absoluteY="-16dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/picFood"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"
                android:src="@drawable/burger" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/picFood"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/picFood"
                android:letterSpacing="0.03"
                android:text="Investment in the Smart way"
                android:textColor="#305f72"
                android:textSize="16dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/teacher"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView24"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/imageView24"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Robertus Alan Walker"
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView24"
                app:layout_constraintStart_toEndOf="@+id/imageView24"
                app:layout_constraintTop_toTopOf="@+id/imageView24" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/teacher"
                android:layout_alignBottom="@+id/teacher"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/teacher"
                android:src="@drawable/ic_video"
                app:layout_constraintStart_toStartOf="@+id/teacher"
                app:layout_constraintTop_toBottomOf="@+id/teacher" />

            <TextView
                android:id="@+id/total"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView24"
                android:layout_alignBottom="@+id/imageView25"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/imageView25"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Robertus"
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView24"
                app:layout_constraintStart_toEndOf="@+id/imageView25"
                app:layout_constraintTop_toTopOf="@+id/imageView24" />

            <Button
                android:id="@+id/addBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teacher"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="Enroll now"
                android:textSize="12sp" />


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
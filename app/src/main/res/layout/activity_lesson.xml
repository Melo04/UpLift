<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson"
    android:orientation="vertical"
    android:background="#ffffff">

    <ScrollView
        android:id="@+id/scrollViewten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="10dp">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:onClick="callEduPage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/title"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Course Details"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/arrowBack"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lesson1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Course Details"
            android:textColor="@color/color_primary"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="130dp">

                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cvbg"
        android:orientation="vertical"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_baseline_person_24"/>

        <TextView
            android:id="@+id/teacher"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Robertus"
            android:textColor="#000000"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="-25dp"
            android:layout_marginStart="220dp"
            android:src="@drawable/ic_video" />

        <TextView
            android:id="@+id/total"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:layout_marginStart="250dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Robertus"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:justificationMode="inter_word"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:textColor="#091020"
            android:layout_marginTop="12dp"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Lessons"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_paaji"
            android:letterSpacing="0.02"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cv1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/investment" />

            <TextView
                android:id="@+id/lesson2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:text="Investment"
                android:textColor="#d703082b"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson2"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="15dp"
                android:text="4 hours, 12 lessons"
                android:textColor="#6003082b"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/l1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/lesson2"
                android:layout_toRightOf="@id/p2"
                android:src="@drawable/play_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:background="@drawable/cv1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/investment" />

            <TextView
                android:id="@+id/lesson3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="Investment"
                android:textColor="#d703082b"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson3"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="15dp"
                android:text="4 hours, 12 lessons"
                android:textColor="#6003082b"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/l2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/lesson3"
                android:layout_toRightOf="@id/p3"
                android:src="@drawable/play_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:background="@drawable/cv1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/investment" />

            <TextView
                android:id="@+id/lesson4"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="Investment"
                android:textColor="#d703082b"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson4"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="15dp"
                android:text="4 hours, 12 lessons"
                android:textColor="#6003082b"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/l3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/lesson4"
                android:layout_toRightOf="@id/p4"
                android:src="@drawable/play_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:background="@drawable/cv1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/investment" />

            <TextView
                android:id="@+id/lesson5"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="Investment"
                android:textColor="#d703082b"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson5"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="15dp"
                android:text="4 hours, 12 lessons"
                android:textColor="#6003082b"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/l4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/lesson5"
                android:layout_toRightOf="@id/p5"
                android:src="@drawable/play_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:background="@drawable/cv1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/investment" />

            <TextView
                android:id="@+id/lesson6"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="Investment"
                android:textColor="#d703082b"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson6"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="15dp"
                android:text="4 hours, 12 lessons"
                android:textColor="#6003082b"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/l5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/lesson6"
                android:layout_toRightOf="@id/p6"
                android:src="@drawable/play_button" />
        </RelativeLayout>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
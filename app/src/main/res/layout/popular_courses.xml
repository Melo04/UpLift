<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="12dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/picFood"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_background"
            android:backgroundTint="#E0E0E0"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger"
            app:layout_constraintLeft_toLeftOf="@id/constraintLayout4"
            app:layout_constraintTop_toTopOf="@id/constraintLayout4"
            app:riv_corner_radius="10dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_baseline_bookmark_added_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/picFood"
            app:layout_constraintTop_toTopOf="@+id/picFood" />

        <TextView
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon_background"
            android:backgroundTint="#464646"
            android:fontFamily="@font/baloo_paaji"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="View Course"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/participant"
            app:layout_constraintTop_toBottomOf="@+id/teacher"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="UI/UX Designer"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/picFood"
            app:layout_constraintTop_toBottomOf="@+id/picFood" />

        <ImageView
            android:id="@+id/participant"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <ImageView
            android:id="@+id/participant2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-3dp"
            android:src="@drawable/profile2"
            app:layout_constraintStart_toEndOf="@+id/participant"
            app:layout_constraintTop_toTopOf="@+id/participant" />

        <ImageView
            android:id="@+id/participant3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-3dp"
            android:src="@drawable/profile3"
            app:layout_constraintStart_toEndOf="@+id/participant2"
            app:layout_constraintTop_toTopOf="@+id/participant" />

        <ImageView
            android:id="@+id/participant4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-3dp"
            android:src="@drawable/profile2"
            app:layout_constraintStart_toEndOf="@+id/participant3"
            app:layout_constraintTop_toTopOf="@+id/participant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="+820 \nParticipants"
            android:textColor="#000000"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/participant3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/participant4"
            app:layout_constraintTop_toTopOf="@+id/participant3" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#595959"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/participant2" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintStart_toStartOf="@+id/participant"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
            android:id="@+id/teacher"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/semibold"
            android:text="Robertus"
            android:textColor="#595959"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView24"
            app:layout_constraintStart_toEndOf="@+id/imageView24"
            app:layout_constraintTop_toTopOf="@+id/imageView24" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_video"
            app:layout_constraintStart_toEndOf="@+id/teacher"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
            android:id="@+id/total"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/semibold"
            android:text="20 Lessons"
            android:textColor="#595959"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView24"
            app:layout_constraintStart_toEndOf="@+id/imageView25"
            app:layout_constraintTop_toTopOf="@+id/imageView24" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>